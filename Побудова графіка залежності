# Створимо дані для графіка
x <- seq(-10, 10, by = 0.1)  # Значення x від -10 до 10 з кроком 0.1
y <- x^2  # Квадратична залежність

# Побудуємо графік
plot(x, y, type = "l", col = "blue", lwd = 2, 
     main = "Графік квадратичної залежності", 
     xlab = "X", ylab = "Y")

# Додамо сітку для кращої візуалізації
grid(col = "gray", lty = "dotted")

# Додатковий приклад: Побудова синусоїди
x_sin <- seq(0, 2 * pi, by = 0.1)  # Значення x від 0 до 2*pi з кроком 0.1
y_sin <- sin(x_sin)  # Синусоїда

# Побудуємо графік синусоїди
plot(x_sin, y_sin, type = "l", col = "red", lwd = 2, 
     main = "Графік синусоїди", 
     xlab = "X", ylab = "Y")

# Додамо сітку для кращої візуалізації
grid(col = "gray", lty = "dotted")
